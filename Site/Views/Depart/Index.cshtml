@model IEnumerable<Site.Entity.Depart>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-xs-12">


            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Departman Listesi</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <br />
                    <a class="btn btn-primary btn-block" href="@Url.Action("Create")">Yeni Departman Ekle</a>
                    <br />
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Departman ID</th>
                                <th>Departman AD</th>
                                <th>Durum</th>
                                <th></th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@item.DepartmanID</td>
                                <td>
                                    @item.DepartmanAD
                                </td>
                                <td>
                                    @item.Durum
                                </td>
                                <td>
                                    <a class="btn btn-primary " href="@Url.Action("Edit",new { id=item.DepartmanID})"><i class="fa fa-fw fa-edit"></i>Burayı düzenle</a>

                                    <a class="btn btn-danger " href="@Url.Action("Delete",new { id=item.DepartmanID})"><i class="fa fa-fw fa-trash-o"></i>Sil</a>
                                    <a class="btn btn-success" href="@Url.Action("DepartmanDetay",new { id=item.DepartmanID})"><i class="fa fa-fw fa-trash-o"></i>Detay Sayfası</a>
                                </td>     </tr>}

                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Kategori Adı</th>
                                <th>Açıklama</th>
                                <th></th>

                            </tr>
                        </tfoot>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section><!-- /.content -->
