
@using Site.Entity
@model List<Perso>

@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />

<h2>@ViewBag.d Departmanı Personelleri</h2>
<br />
<div style="background-color:chartreuse">
    Departman Adı: @ViewBag.d
</div>

<table class="table table-hover">

    <tr>
        <th>Persomel ID</th>
        <th>Persomel Adı</th>
        <th>Personel Soyadı</th>
        <th>Personel Telefon</th>
        <th>Personel Mail</th>
        <th>
            Görsel
        </th>
    </tr>






        @foreach (var item in Model)
        {

<tr>
    <td>@item.PersonelID</td>
    <td>@item.PersonelAD</td>
    <td>@item.PersonelSoyad</td>
    <td>@item.Telefon</td>
    <td>@item.Mail</td>
    <td> <img src="@item.PersonelGorsel" style="width:80px; height:80px" /></td>
</tr>
        }





















    </table>
