@model IEnumerable<Site.Entity.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<section class="content">
    <div class="row">
        <div class="col-xs-12">


            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Kategori Listesi</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <br />
                    <a class="btn btn-primary btn-block" href="@Url.Action("Create")">Yeni Kayıt</a>
                    <br />
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Kategiri Adı</th>
                                <th>Açıklama</th>
                                <th></th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {


                                <tr>
                                    <td>@item.AD</td>
                                    <td>
                                        @item.Descrtription
                                    </td>
                                    <td>
                                        <a class="btn btn-primary " href="@Url.Action("Edit",new { id=item.ID})"><i class="fa fa-fw fa-edit"></i>Burayı düzenle</a>

                                        <a class="btn btn-danger " href="@Url.Action("Delete",new { id=item.ID})"><i class="fa fa-fw fa-trash-o"></i>Sil</a>
                                       
                                    </td>

                                </tr>
                            }

                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Kategori Adı</th>
                                <th>Açıklama</th>
                                <th></th>

                            </tr>
                        </tfoot>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section><!-- /.content -->
