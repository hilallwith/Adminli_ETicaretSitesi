@using Site.Entity
@model IEnumerable<Product>



<div id="myCarousel" class="carousel slide homCar">
    <div class="carousel-inner">

        <div class="item active">
            <img style="width:100%;  width:100% ; max-width:698px; max-height:327px; min-width:689px; min-height:327px " src="/Content/image/1.jpg" alt="bootstrap templates">
            <div class="">

            </div>
        </div>
        @foreach (var item in Model)
        {
            <div class="item">
                <a href="/Home/ProductDetails/@item.ID">   <img style="width:100% ; max-width:698px; 
                    max-height:327px; min-width:698px; min-height:327px " 
                src="~/Content/image/@item.RESIM" alt="bootstrap ecommerce templates"></a>
                <div class="carousel-caption">
                    <h4> @item.OAD</h4>
                    <p><span>@item.FIYAT (₺) </span></p>
                </div>
            </div>
        }
    </div>
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">‹</a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">›</a>
</div>
