@using Site.Entity
@model List<FaturaKalem>
@{
    ViewBag.Title = "FaturaDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<br />

<h2>Fatura Kalemleri Sayfası</h2>
<br />


<table class="table table-hover">

    <tr>
        <th> ID</th>
        <th>Açıklama</th>
        <th>Birim Fiyat</th>
        <th>Miktar</th>
        <th>
            Tutar
        </th>
    </tr>






    @foreach (var item in Model)
    {

        <tr>
            <td>@item.FaturaKalemID</td>
            <td>@item.Açıklama</td>
            <td>@item.Miktar</td>
            <td>@item.BirimFiyat</td>
            <td>@item.Tutar</td>
        </tr>
    }


</table>

