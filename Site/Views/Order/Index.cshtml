
@using Site.Models
@model IEnumerable<AdminOrder>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-xs-12">

        <!-- /.box -->
        <div class="box">
            <div class="box-header">
                <h3 class="box-title"> Sipariş Durumu</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">

                <table id="example6" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>

                            <th>Sipariş Numarası</th>
                            <th>Sipariş tarihi</th>
                            <th>Sipariş durumu</th>
                            <th>Toplam (₺)</th>
                            <th>Ürün sayısı</th>


                            <th></th>


                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Id
                                </td>
                                <td>
                                    @item.OrderNumber
                                </td>
                                <td>
                                    @item.OrderDate
                                </td>
                                <td>
                                    @item.OrderState
                                </td>
                                <td>
                                    @item.Total
                                </td>
                                <td>
                                  
                                    @item.Count
                                </td>

                                <td>
                                    <a class="btn btn-primary btn-sm" href="@Url.Action("Details",new { id = item.Id } )"><i class="fa fa-fw fa-edit"></i>Detay</a>

                                </td>
                            </tr>
                        }

                        <tr>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            <th></th>
                            
                            <th></th>




                        </tr>



                    </tbody>
                    <tfoot>
                        <tr>
                            <th>ID</th>

                            <th>Sipariş Numarası</th>
                            <th>Sipariş tarihi</th>
                            <th>Sipariş durumu</th>
                            <th>Toplam (₺)</th>
                            <th>Ürün sayısı</th>


                            <th></th>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>



