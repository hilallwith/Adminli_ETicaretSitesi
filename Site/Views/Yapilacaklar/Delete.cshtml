@model Site.Entity.Giderler

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <h3>Yapılacağı Silmek İstediğinizden Eminmisiniz</h3>
    <div>
        <h4>Giderler</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
               Açıklama
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Aciklama)
            </dd>

            <dt>
             Tarih
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Tarih)
            </dd>

            

            <dt>
               Durum
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Durum)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Sil" class="btn btn-danger" /> |
                @Html.ActionLink("Yapılacaklar Listesi", "Index", null, new { @class = "btn btn-warning" })
            </div>
        }
    </div>
</section>