

@model Site.Models.Reset
@{
    ViewBag.Title = "Reset";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div id="sidebar" class="span3">
        <div class="well well-small">
            <ul class="nav nav-list">
                @Html.Action("_CategoryList", "Category")
                <li style="border:0"> &nbsp;</li>
                @Html.Action("Sumary", "Cart")

            </ul>
        </div>


        @Html.Action("_FeaturedProductList", "Home")

    </div>
    <div class="span9">
        <ul class="breadcrumb">
            <li><a href="/Home/Index">Anasayfa</a> <span class="divider">/</span></li>
            <li class="active">Giriş Formu</li>
        </ul>


        <div class="well">
            @using (Html.BeginForm("Reset", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
            {



                <h3>Giriş Formu</h3>



                <div class="control-group">
                    <label class="control-label" for="inputFname">Kullanıcı Adı </label>
                    <div class="controls">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", @style = "max-width:35%" } })
                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>



                <div class="control-group">
                    <label class="control-label" for="inputFname">Mail</label>
                    <div class="controls">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Mail, new { htmlAttributes = new { @class = "form-control", @style = "max-width:35%" } })
                            @Html.ValidationMessageFor(model => model.Mail, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>


                <div class="control-group">
                    <div class="controls">
                        <input type="submit" name="submitAccount" value="Giriş Yap" class="btn btn-success">
                    </div>
                </div>
            }
        </div>




    </div>
</div>

