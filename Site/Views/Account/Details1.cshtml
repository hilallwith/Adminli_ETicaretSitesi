@model Site.Models.OrderDetails1
@{
    ViewBag.Title = "Details1";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="span12">

        <div class="well well-small">



            <table class="table table-bordered table-condensed">
                <thead>
                    <tr>
                        <th>Kiralama ID</th>
                        <th>Kiralama numarası</th>
                        <th>Kiralama Tarihi </th>
                        <th>Kiralama tutarı </th>
                        <th>Kiralama Durumu</th>

                        <th>Adres</th>
                    </tr>
                </thead>


                <tbody>
                  
                    <tr>
                        <td>@Model.OrderId</td>
                        <td>@Model.OrderNumber</td>
                        <td>@Model.OrderDate</td>
                        <td>@Model.Total</td>
                        <td>
                            @if (Model.OrderState == Site.Entity.OrderState.Bekleniyor)
                            {

                                <a class="btn btn-danger">Sipariş Bekleniyor</a>

                            }
                            else if (Model.OrderState == Site.Entity.OrderState.Tamamlandı)
                            {

                                <a class="btn btn-success">Sipariş Tamamlandı</a>

                            }
                            else if (Model.OrderState == Site.Entity.OrderState.Paketlendi)
                            {

                                <a class="btn btn-info">Sipariş Paketlendi</a>

                            }
                            else if (Model.OrderState == Site.Entity.OrderState.Kargolandı)
                            {

                                <a class="btn btn-primary">Sipariş Kargolandı</a>

                            }



                        </td>
                        <td>@Model.Adres
                        <br />
                        @Model.Sehir
                        <br />
                        @Model.Semt
                        <br />
                        @Model.Mahalle
                        <br />
                        @Model.PostaKodu
                        <br />
                        </td>

                    </tr>
              

                </tbody>

            </table><br />
            <table class="table table-bordered table-condensed">
                <thead>
                    <tr>
                        <th>Resim</th>
                        <th>Film Adı  </th>
                        <th>Kiralama tutarı(₺) </th>
                        <th>Adet</th>

                        <th></th>
                    </tr>
                </thead>


                <tbody>
                    @foreach (var item in Model.OrderLines1)
                    {
                        <tr>
                            <td><img  src="~/Content/image/@item.RESIM" height="75" width="75"/>r</td>
                            <td>@item.ProductName</td>
                            <td>@item.FIYAT</td>
                            <td>@item.Quantity</td>
                          <td><a href="/Home/ProductDetails/@item.ProductId" class="btn btn-success" target="_blank">Ürün Detay </a></td>
                        </tr>
                    }

                </tbody>

            </table>
        </div>
    </div>
</div>


