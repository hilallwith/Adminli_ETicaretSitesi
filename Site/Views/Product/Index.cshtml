@model IEnumerable<Site.Entity.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-xs-12">


            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Film Listesi</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <br />
                    <a class="btn btn-primary btn-block" href="@Url.Action("Create")">Yeni Kayıt</a>
                    <br />
           
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Resim</th>
                                <th>Adı</th>
                                <th>Onaylı</th>
                                <th>anasayfa</th>
                                <th>Popüler</th>
                                <th>Kategori Adı</th>

                                <th></th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {


                                <tr>
                                    <td><img src="~/Content/image/@item.RESIM" width="80" height="60" /></td>
                                    <td>
                                        @item.OAD
                                    </td>
                                    <td>
                                        @if (item.IsApproved)
                                        {
                                            <label class="label label-success"><i class="fa fa-fw fa-check-circle-o"></i>Evet</label>
                                        }
                                        else
                                        {
                                            <label class="label label-danger"><i class="fa fa-fw fa-times-circle"></i>Hayır</label>
                                        }
                                    </td>
                                    <td>
                                        @if (item.IsHome)
                                        {
                                            <label class="label label-success"><i class="fa fa-fw fa-check-circle-o"></i>Evet</label>
                                        }
                                        else
                                        {
                                            <label class="label label-danger"><i class="fa fa-fw fa-times-circle"></i>Hayır</label>
                                        }
                                    </td>
                                    <td>
                                        @if (item.IsFeatured)
                                        {
                                            <label class="label label-success"><i class="fa fa-fw fa-check-circle-o"></i>Evet</label>
                                        }
                                        else
                                        {
                                            <label class="label label-danger"><i class="fa fa-fw fa-times-circle"></i>Hayır</label>
                                        }
                                    </td>
                                    <td>
                                        @item.Category.AD
                                    </td>
                                    <td>
                                        <a class="btn btn-primary " href="@Url.Action("Edit",new { id=item.ID})"><i class="fa fa-fw fa-edit"></i>Burayı düzenle</a>

                                        <a class="btn btn-danger " href="@Url.Action("Delete",new { id=item.ID})"><i class="fa fa-fw fa-trash-o"></i>Sil</a>
                                    </td>

                                </tr>
                            }

                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Resim</th>
                                <th>Adı</th>
                                <th>Onaylı</th>
                                <th>anasayfa</th>
                                <th>Popüler</th>
                                <th>Kategori Adı</th>

                                <th></th>

                            </tr>
                        </tfoot>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section><!-- /.content -->