@model Site.Entity.Perso

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<section class="content">

    <h3>Personeli Silmek istediğinizden eminmisiniz?</h3>
    <div>
        <h4> silme</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Kategori adı
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PersonelAD)
            </dd>

            <dt>
                Açıklama
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PersonelSoyad)
            </dd>
            <dt>
                Görsel
            </dt>

            <dd>
                @Html.DisplayFor(model => model.PersonelGorsel)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Sil" class="btn btn-danger" /> |
                @Html.ActionLink("Personel Listesi", "Index", null, new { @class = "btn btn-warning" })
            </div>
        }
    </div>
</section>